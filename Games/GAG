    Description = "Choose which gears you want to auto buy (ALL STOCK)",
    Options = validGears,
    Default = {},
    PlaceHolder = "Select gears",
    Multiple = true,
    Callback = function(selected)
        selectedGears = selected
    end
})

sections.GearBuyer:AddToggle("AutoBuySelectedGear", {
    Title = "Auto Buy Selected Gears",
    Default = false,
    Description = "Continuously buy ALL STOCK of selected gears simultaneously (Silent)",
    Callback = function(value)
        autoBuyingSelectedGear = value
        if value then
            if #selectedGears > 0 then
                task.spawn(function()
                    while autoBuyingSelectedGear do
                        local purchased = instantBuyAllGearStock(selectedGears)
                        if purchased == 0 then
                            task.wait(5) -- Wait longer if no stock available
                        else
                            task.wait(2) -- Wait shorter if purchases were made
                        end
                    end
                end)
            else
                lib:Notification('Warning', 'No gears selected! Please select gears from dropdown first.', 3)
                autoBuyingSelectedGear = false
            end
        end
    end,
})

sections.GearBuyer:AddToggle("AutoBuyAllGears", {
    Title = "Auto Buy All Gears",
    Default = false,
    Description = "Auto Buy All Gears all stock (Silent)",
    Callback = function(value)
